<h1>Admins</h1>

<%= form_with(url: admins_path) do |form| %>
  <%= form.submit 'Delete', class: 'btn btn-primary' %>

  <table class="table" data-controller="tables">
    <thead>
      <tr>
        <th>
          <%= form.check_box('ids', { multiple: true, data: { action: 'change->tables#toggleAll' } }, 'all', nil) %>
        </th>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= form.check_box('ids', { multiple: true, data: { 'tables-target': 'admins' } }, admin.id, nil) %></td>
          <td><%= admin.name %></td>
          <td><%= admin.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end  %>