
<div data-controller="tables">
  <%= form_with(url: admins_path) do |form| %>
    <div class="d-flex justify-content-between">
      <h1>Admins</h1>
      <%= form.submit 'Delete', class: 'btn btn-primary', data: { 'tables-target': 'deleteBtn'  }, class: 'd-none' %>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>
            <%= form.check_box('ids', { multiple: true, data: { action: 'change->tables#toggleAll', 'tables-target': 'masterCheck' } }, 'all', nil) %>
          </th>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td>
              <%= form.check_box('ids', { multiple: true, data: { 'tables-target': 'items', action: 'change->tables#sync' } }, admin.id, nil) %>
            </td>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end  %>
</div>